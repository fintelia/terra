	// else if (smoothstep(2000, 3000, h00) > 1- normal.y)
	// 	albedo_roughness = vec4(.2, .2, .2, 0.4);
	// else if (h00 < 2)
	// 	albedo_roughness = vec4(.2, .2, .15, .8);
	// else if (normal.y < 0.9)
	// 	albedo_roughness = vec4(vec3(0.02), 0.8);
	// else if (h00 > 100 && normal.y < 0.99)
	// 	albedo_roughness = vec4(0, 0.1, .05, 0.8);
	// else
	// 	albedo_roughness = vec4(0, 0.06, .015, 0.8);

	// if (is_water) {
	// 	albedo_roughness.a = 0.4;
	// 	float negative_depth = min(h00 + h10 + h01 + h11, 0);
	// 	albedo_roughness.rgb = mix(vec3(0,.03,.2), albedo_roughness.rgb, exp(negative_depth * vec3(5,.5,.5)));
	// }

	if (node.level < 13) {
		float treecover_value = texture(sampler2DArray(treecover, linear), layer_to_texcoord(TREECOVER_LAYER)).r;
		if (node.layer_slots[TREE_ATTRIBUTES_LAYER] >= 0) {
			vec3 tcoord = layer_to_texcoord(TREE_ATTRIBUTES_LAYER);
			vec4 tree_attr = texture(sampler2DArray(tree_attributes, linear), tcoord);

			// vec4 tree_albedo = texture(sampler2D(topdown_albedo, linear), (fract(tcoord.xy*128+0.5)-0.5)*.3 + 0.5);
			// vec2 tree_normal_xz = texture(sampler2D(topdown_normals, linear), (fract(tcoord.xy*128+0.5)-0.5)*0.3 + 0.5).rg;
